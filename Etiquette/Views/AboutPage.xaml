<Page
    x:Class="Etiquette.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="25" MaxWidth="600">

            <StackPanel Spacing="10">
                <FontIcon Glyph="&#xE946;" FontSize="64" />

                <TextBlock Text="Etiquette" 
                           FontSize="28" FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Gestion d'impression d'étiquettes" 
                           FontSize="14"
                           HorizontalAlignment="Center" 
                           Foreground="Gray"/>
            </StackPanel>

            <MenuFlyoutSeparator MaxWidth="200"/>

            <StackPanel Spacing="5">
                <TextBlock Text="Développé par" 
                           FontSize="16" FontWeight="Normal"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="DEHER Rémi" 
                           FontSize="18" FontWeight="SemiBold"
                           HorizontalAlignment="Center" 
                           Foreground="#0078D7"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Code source &amp; Contributions" 
                           FontSize="14" FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <HyperlinkButton NavigateUri="https://github.com/remi-deher/etiquette" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE90A;" FontFamily="Segoe MDL2 Assets"/>
                        <TextBlock Text="Voir le projet sur GitHub"/>
                    </StackPanel>
                </HyperlinkButton>
            </StackPanel>

            <StackPanel Spacing="5" Margin="0,10,0,0">
                <TextBlock Text="Licence" 
                           FontSize="14" FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Ce projet est distribué sous la licence MIT." 
                           FontSize="12"
                           HorizontalAlignment="Center" Foreground="Gray"/>

                <TextBlock Text="© 2024 - Tous droits réservés" 
                           FontSize="12"
                           HorizontalAlignment="Center" Foreground="Gray"/>
            </StackPanel>

        </StackPanel>

        <TextBlock Text="Version 2.0.0" 
                   VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                   Margin="20" 
                   Foreground="Silver" 
                   FontSize="12"/>
    </Grid>
</Page>